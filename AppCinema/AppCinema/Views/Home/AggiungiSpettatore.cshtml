@using AppCinema.Models;
@model IngressoViewModel;
@{
    ViewBag.Title = "Nuovo Ingresso";
}

<div class="text-center">
    <h1 class="display-4">Aggiungi un nuovo spettatore</h1>
    @using (Html.BeginForm())
    {
        <div class="form-horizontal">
            <hr>
            <div class="form-group">
                @Html.LabelFor(model => model.Spettatore.Nome, htmlAttributes:new{@Class = "label col-nd-2"})
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Spettatore.Nome)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Spettatore.Cognome, htmlAttributes:new{@Class = "label col-nd-2"})
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Spettatore.Cognome)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Spettatore.DataNascita, htmlAttributes:new{@Class = "label col-nd-2"})
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Spettatore.DataNascita)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.SalaSelezionata.IdSala, htmlAttributes:new{@Class = "label col-nd-2"})
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SalaSelezionata.IdSala)
                </div>
            </div>

            <div class="form=group">
                <div class="col-md-offset col-md-10">
                    <input type="submit" value="Salva" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>